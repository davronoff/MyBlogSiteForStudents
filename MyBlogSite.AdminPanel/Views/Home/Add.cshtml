<form class="mx-4" asp-controller="home" asp-action="add" enctype="multipart/form-data" method="post">
    <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" class="form-control" id="title" placeholder="Comment">
    </div>
    <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
        <label asp-for="Comment">Comment</label>
        <input asp-for="Comment" type="text" class="form-control" id="title" placeholder="Comment">
    </div>
    <div class="input-group mx-4 " style="padding: 10px; font-size: 18px;">
        <input type="file" asp-for="Image" accept="image/*" class="form-control" id="inputGroupFile02">
    </div>
    @*Button group*@
    <div class="button-group text-center my-5">
        <button type="submit" class="btn btn-success me-5" style=" width:200px; ">
            Save
        </button>
        <a asp-controller="" asp-action="">
            <span class="btn btn-info" style=" width:200px;">Cancel</span>
        </a>
    </div>
</form>